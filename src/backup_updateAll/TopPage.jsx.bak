
import React, { useState } from "react";
import { useNavigate } from "react-router-dom";
import NavButton from "../components/NavButton";

export default function TopPage() {
  const navigate = useNavigate();
  const [keyword, setKeyword] = useState("");

  const [filters, setFilters] = useState({
    brand: "",
    maker: "",
    period: "",
    country: "",
    style: ""
  });

  const handleSearch = () => {
    navigate("/search", { state: { keyword, filters } });
  };

  return (
    <div className="container mx-auto p-4">
      <h1 className="text-2xl font-bold mb-4">Leather Archive</h1>

      {/* テキスト検索 */}
      <input
        type="text"
        placeholder="キーワード検索..."
        value={keyword}
        onChange={(e) => setKeyword(e.target.value)}
        className="border p-2 w-full mb-4"
      />

      {/* タグ検索 */}
      <div className="flex flex-col gap-2 mb-4">
        <select
          value={filters.brand}
          onChange={(e) => setFilters({ ...filters, brand: e.target.value })}
          className="border p-2"
        >
          <option value="">ブランド</option>
          <option>Buco</option>
          <option>Trojan</option>
        </select>
        <select
          value={filters.maker}
          onChange={(e) => setFilters({ ...filters, maker: e.target.value })}
          className="border p-2"
        >
          <option value="">メーカー</option>
          <option>東京工房</option>
          <option>Langlitz</option>
        </select>
        <select
          value={filters.period}
          onChange={(e) => setFilters({ ...filters, period: e.target.value })}
          className="border p-2"
        >
          <option value="">年代</option>
          <option>1930s</option>
          <option>1950s</option>
        </select>
        <select
          value={filters.country}
          onChange={(e) => setFilters({ ...filters, country: e.target.value })}
          className="border p-2"
        >
          <option value="">地域</option>
          <option>アメリカ</option>
          <option>日本</option>
        </select>
        <select
          value={filters.style}
          onChange={(e) => setFilters({ ...filters, style: e.target.value })}
          className="border p-2"
        >
          <option value="">スタイル</option>
          <option>ダブルライダース</option>
          <option>シングルライダース</option>
        </select>
      </div>

      <NavButton onClick={handleSearch}>検索</NavButton>

      <div className="flex gap-4 mt-6">
        <NavButton onClick={() => navigate("/brands")}>ブランド一覧</NavButton>
        <NavButton onClick={() => navigate("/makers")}>メーカー一覧</NavButton>
      </div>

      <section className="mt-6">
        <h2 className="text-lg font-bold mb-2">最近追加されたモデル</h2>
        <ul className="list-disc pl-6">
          <li>Buco J-24 (1950s, Horsehide)</li>
          <li>Trojan 619 (1940s, Goatskin)</li>
          <li>Sears Hercules (1930s, Cowhide)</li>
        </ul>
      </section>
    </div>
  );
}
